  },
  "dependencies": {
    "@algolia/cli": "^4.0.8",
    "conventional-changelog-cli": "^2.2.2",
    "firebase-tools": "^11.0.1"
  },
  "devDependencies": {
    "cz-conventional-changelog": "^3.3.0",
    "stylelint": "^14.10.0",
    "stylelint-config-twbs-bootstrap": "^5.0.0",
    "stylelint-scss": "^4.3.0"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "version": "0.2.2"
